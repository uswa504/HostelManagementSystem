		<div class="content-wrapper">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12">
						<h2 class="page-title" style="margin-top: 5%">Hostels</h2>
						<div class="panel panel-default">
							<div class="panel-heading">All Hostel Details</div>
							<div class="panel-body">
                                <table id="zctb" class="display table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Hostel ID</th>
                                            <th>Hostel No.</th>
                                            <th>Hostel Name</th>
                                            <th>Location</th>
                                            <th>Hostel Type</th>
                                            <th>Total Rooms</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    @foreach (var s in Model)
                                    {
                                        <tr>
                                        <td>@s.hostel_id</td>
                                        <td>@s.hostel_no</td>
                                        <td>@s.hostel_name</td>
                                        <td>@s.hostel_location</td>
                                        <td>@s.hostel_type</td>
                                        <td>@s.hostel_rooms</td>
                                        <td>
                                            <a class="see-details" href="/HallCouncilClerk/DeleteHostel/@s.hostel_id">Delete</a>
                                        </td>
                                        </tr>
                                    }
                                </table>
							</div>
						</div>
					</div>
				</div>
			</div>
			</div>
