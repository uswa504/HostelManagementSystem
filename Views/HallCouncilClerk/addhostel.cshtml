<div class="ts-main-content">
    <div>
        @Html.Partial("Header");
    </div>
    <div>
        @Html.Partial("HC_Clerk_Sidebar");
    </div>
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="page-title">Add Hostel </h2>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">Add Hostel</div>
                                <div class="panel-body">
                                    <form action="/HallCouncilClerk/hostelAdd" method="post" class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Hostel No:</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" name="hostel_number" pattern="[0-9]*" title="Only Digits" required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Hostel Name:</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" name="hostel_name" required="required">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Hostel Location:</label>
                                            <div class="col-sm-8">
                                                <select name="hlocation" class="form-control" required>
                                                    <option value="">Select</option>
                                                    <option value="Old Campus">Old Campus</option>
                                                    <option value="New Campus">New Campus</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Hostel Type</label>
                                            <div class="col-sm-8">
                                                <select name="htype" class="form-control" required>
                                                    <option value="">Select</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Male">Male</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="hr-dashed"></div>
                                        <div class="hr-dashed"></div>
                                        <div class="col-sm-8 col-sm-offset-2">
                                            <input class="btn btn-primary" type="submit" id="submitButton" name="submit" value="Add">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
