
    <div class="ts-main-content">
        <div class="brand clearfix">
            <a href="#" class="logo text-white" style="font-size:16px;">Hostel Management System</a>
            <ul class="ts-profile-nav">
                <li class="ts-account">
                <li><a href="/Home/Logout">Logout</a></li>
            </ul>
        </div>
        <nav class="ts-sidebar">
            <ul class="ts-sidebar-menu">
                <li class="ts-label">Main</li>
                <li><a href="/HallCouncilClerk/addhostel"><i class="fa fa-dashboard"></i>Add Hostel</a></li>
                <li><a href="/HallCouncilClerk/addroom"><i class="fa fa-user"></i>Add Room</a></li>
                <li><a href="/HallCouncilClerk/adduser"><i class="fa fa-users"></i>Add User</a></li>
                <li><a href="/HallCouncilClerk/view_rooms"><i class="fa fa-users"></i>View Rooms</a></li>
                <li><a href="/HallCouncilClerk/view_hostels"><i class="fa fa-users"></i>View Hostels</a></li>
                <li><a href="/HallCouncilClerk/viewusers"><i class="fa fa-users"></i>View Users</a></li>
            </ul>
        </nav>
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="page-title" style="margin-top: 4%">Add User</h2>
                        <div class="panel panel-default">
                            <div class="panel-heading">Add User</div>
                            <div class="panel-body">
                                <form action="/HallCouncilClerk/UserAdd" method="post" class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">User_name:</label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control" name="user_name" id="hostel_name" value="" required="required">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">User_Password:</label>
                                        <div class="col-sm-8">
                                            <input type="password" class="form-control" name="user_passwd" id="hostel_name" value="" required="required">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">User_role:</label>
                                        <div class="col-sm-8">
                                            <select name="user_role" class="form-control" required>
                                                <option value="">Select</option>
                                                <option value="vc">Vice Chancellor</option>
                                                <option value="chc">Chairman Hall Council</option>
                                                <option value="hc_clerk">Hall Council Clerk</option>
                                                <option value="hostel_clerk">Hostel Clerk</option>
                                                <option value="warden">Warden</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Hostel Assigned:</label>
                                        <div class="col-sm-8">
                                            <input type="text" class="form-control" name="hostel" id="hostel_name" value="">
                                        </div>
                                    </div>
                                    <div class="col-sm-8 col-sm-offset-2">
                                        <input class="btn btn-primary" type="submit" id="submitButton" name="submit" value="Add">
                                    </div>
                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        < !--Loading Scripts-- >
        @if (ViewBag.Message != null){
            <script type="text/javascript">
                         $("#submitButton").on("click", function () {
                            alert("@ViewBag.Message");
                        });
            </script>

        }
        <script>
            $(document).ready(function () {
                $("#submitButton").on("click", function () {

                    alert('User has been added succesfully');
                });

            });
        </script>
