@model Online_Hostel_Management_System.Models.User
<div class="login-page bk-img" style="background-color:#6a6c6e">
    <div class="form-content">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3" style="margin-top:4%">
                    <h1 class="text-center text-bold text-light mt-4x">Hostel Management System</h1>
                    <div class="well row pt-2x pb-3x bk-light">
                        <div class="col-md-8 col-md-offset-2">
                            <form action="/Home/Login" class="mt" method="post">
                                <label class="text-uppercase text-sm">Your Username</label>
                                <input type="text" placeholder="Username" name="username" class="form-control mb">
                                <label class="text-uppercase text-sm">Password</label>
                                <input type="password" placeholder="Password" name="password" class="form-control mb">
                                <input type="submit" name="login" class="btn btn-primary btn-block" value="Login">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var result = false;
    $('input[name=username]').blur(function (e) {
        $.ajax({
            url: "/Home/checkUser?username=" + $('input[name=username]').val(),
            type: "GET",
            success: function (data) {
                if (!data.user_available) {
                    window.alert("User not found!")
                } else {
                    result = true;
                }
            }
        });
    });

    $("form").submit(function (e) {
        if (!result) {
            alert("User not found!")
        }
        return result;
    })
   
</script>