<div>
    @Html.Partial("Header");
</div>
<div class="ts-main-content">
    @Html.Partial("Warden_Sidebar");
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="page-title" style="margin-top:5%">Manage Mess Dues</h2>
                    <a class="btn btn-primary" name="generate" style="margin-bottom:2%" href="/Warden/Generate_MessRecord">Generate Mess Record</a>
                    <div class="panel panel-default">
                        <div class="panel-heading">All Room Details</div>
                        <div class="panel-body">
                            <table id="zctb" class="display table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Allotte Name</th>
                                        <th>Mess Dues</th>
                                        <th>Month</th>
                                        <th>Last date to submit</th>
                                        <th>Paid Status</th>
                                        <th>Paid Date</th>
                                        <th>Recipt No.</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ foreach (var x in Model)
                                        {
                                            <tr>
                                                <td class="col-sm-2"></td>
                                                <td><input name="mess_amount" type="text" /></td>
                                                <td><input class="col-sm-6" name="mess_month" type="month" /></td>
                                                <td><input name="last_date" type="month" /></td>
                                                <td>
                                                    <select name="paid_status">
                                                        <option value="unpaid"></option>
                                                        <option value="paid"></option>
                                                    </select>
                                                </td>
                                                <td><input name="paid_date" type="month" /></td>
                                                <td><input class="col-sm-2" type="text" name="reciptno" /></td>
                                                <td>
                                                    <a href="/Warden/Update/" class="link_black" title="Update">UpdateMess</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>